{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],

  "compilerOptions": {
    "types": ["node"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["electron"],
  "exclude": ["node_modules"]
}
